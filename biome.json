{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": ["resources/*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "a11y": {
        "useAltText": "off",
        "useKeyWithClickEvents": "off"
      },
      "correctness": {
        "noUndeclaredVariables": "off",
        "useImportExtensions": "off",
        "noNodejsModules": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "useLiteralKeys": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noDefaultExport": "off",
        "useNodejsImportProtocol": "off",
        "noNonNullAssertion": "off",
        "noNegationElse": "off",
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  }
}
